@model IEnumerable<DoAnChuyenNganhBookingHotel.Models.DB.ThanhToan>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Thanh Toán</h3>

<p>
    <div style="padding-top:3px">

        @Html.ActionLink("Tạo Mới", "Create", null, new { @class = "btn btn-outline-secondary" })
    </div>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.datphong_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sotienthanhtoan)
        </th>      
        <th>
            @Html.DisplayNameFor(model => model.HinhThucThanhToan.hinhthucthanhtoan1)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.datphong_id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.sotienthanhtoan)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.HinhThucThanhToan.hinhthucthanhtoan1)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.thanhtoan_id }, new { @class = "btn btn-outline-success" })
        @Html.ActionLink("Details", "Details", new { id = item.thanhtoan_id }, new { @class = "btn btn-outline-warning" })
        @Html.ActionLink("Delete", "Delete", new { id = item.thanhtoan_id }, new { @class = "btn btn-outline-danger" })
